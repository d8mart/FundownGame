<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/pantalla1solofondo02modif">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/batidora"
         android:layout_width="150dp"
         android:layout_height="150dp"
         android:orientation="horizontal"
         android:layout_gravity="center"
         android:layout_marginBottom="20dp"
         android:layout_marginLeft="90dp"
           android:onClick="batidora"
         android:background="@drawable/batidoramodif">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/caja"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="350dp"
            android:layout_marginBottom="20dp"
            android:onClick="caja"
            android:background="@drawable/cajaregistradora">

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
