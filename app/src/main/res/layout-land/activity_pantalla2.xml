<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.daniel.fundowngame.Pantalla2"
    android:background="@drawable/pantalla2sinelementosmodif">

   <RelativeLayout
       android:id="@+id/contenedor"
       android:layout_width="match_parent"
       android:layout_height="match_parent">



       <LinearLayout
           android:id="@+id/taza"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:orientation="vertical"
           android:layout_gravity="center"
           android:layout_marginLeft="150dp"
           android:layout_marginTop="200dp"
           android:background="@drawable/tazon">

       </LinearLayout>

       <LinearLayout
           android:id="@+id/dropos"
           android:orientation="horizontal"
           android:layout_width="110dp"
           android:layout_height="110dp"
           android:layout_marginLeft="190dp"
           android:layout_marginBottom="250dp"
           android:layout_alignTop="@+id/taza"></LinearLayout>


0
       <LinearLayout
           android:id="@+id/huevo"
           android:layout_width="110dp"
           android:layout_height="110dp"
           android:layout_gravity="top|end"
           android:layout_marginLeft="650dp">
           <ImageView
               android:id="@+id/huevoimg"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/huevo"/>

       </LinearLayout>


   </RelativeLayout>

</FrameLayout>
